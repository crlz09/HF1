<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:minWidth="300dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:paddingBottom="50dp"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text="No hay conexión con el GPS"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:paddingBottom="50dp"
        android:gravity="center_horizontal"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:text="No hemos podido acceder a tu ubicación mediante el GPS, ésto se debe a que está desactivado.

        Para obtener anuncios cercanos a tí debes activar la ubicación"
        />

    <Button
        android:id="@+id/btnAlert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="#0a4b87"
        android:drawableLeft="@drawable/ic_settings_white_24dp"
        android:drawablePadding="10dp"
        android:gravity="center"
        android:padding="10dp"
        android:text="ACTIVAR"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#ffffffff"
        android:layout_marginBottom="20dp"/>
</LinearLayout>
